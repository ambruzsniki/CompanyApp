@model CompanyApp.Models.Employee
@{
    ViewBag.Title = "Munkatárs létrehozása";
}

<h2>Új munkatárs létrehozása</h2>


@using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Position, new { @class = "col-md-2" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Position, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Position)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNumber)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-2" })
        <div class="col-md-4">
            @Html.DropDownList("CompanyName", new SelectList(CompanyApp.Init.companyList, "CompanyName", "CompanyName"), "--Válasszon céget--", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CompanyName)
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Létrehozás" />
    @Html.ActionLink("Mégse", "Index", "Employee", new { @class = "btn btn-default" })

}